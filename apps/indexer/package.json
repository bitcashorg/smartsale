{
  "name": "smartsale-indexer",
  "version": "0.0.1",
  "description": "",
  "main": "src/index.ts",
  "repository": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "env-cmd nodemon --watch 'src/**' --ext 'ts' --exec 'ts-node src/index.ts' --trace-warnings",
    "start": "env-cmd node ./dist",
    "build": "rimraf dist && tsc -b",
    "prisma-gen": "prisma db pull && prisma generate",
    "lint": "eslint --ignore-path .gitignore \"**/*.+(js|ts|tsx)\" --fix",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx)\"",
    "sentry:sourcemaps": "npx sentry-cli sourcemaps inject --org blockmatic --project bitcash-indexer ./dist && sentry-cli sourcemaps upload --org blockmatic --project bitcash-indexer ./dist"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.202",
    "@types/node-fetch": "^2.6.11",
    "bun-types": "latest",
    "env-cmd": "^10.1.0",
    "nodemon": "^3.0.3",
    "rimraf": "^5.0.5",
    "smartsale-abis": "workspace:*",
    "smartsale-lib": "workspace:*",
    "smartsale-chains": "workspace:*",
    "tsconfig": "workspace:*",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@dfuse/client": "^0.3.21",
    "@sentry/node": "^7.98.0",
    "lodash": "^4.17.21",
    "nexus": "^1.3.0",
    "node-fetch": "3.3"
  }
}